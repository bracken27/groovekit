{
  "background": "#101216",
  "foreground": "#E8EAF0",
  "font-family": "Inter, Helvetica, Arial",
  "#title": { "font-size": "22", "font-style": "bold", "margin": "0 0 8 0" },

  "Button": { "padding": "10", "radius": "12", "background": "#1D2230", "border": "#3A4154" },
  "Button:hover": { "background": "#273043" },
